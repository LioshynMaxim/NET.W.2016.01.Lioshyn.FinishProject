<!DOCTYPE html>
<html lang="en">
<head>
    
    @RenderSection("Header", required: false)
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="generator" content="Bootply"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css"/>
    @Styles.Render("~/Content/admincss")
    @Scripts.Render("~/adminjs")
    
</head>
<body id="informational">
    <nav class="navbar navbar-static">
        <div class="container">
            <div class="navbar-header">
                <b>
                    @Html.ActionLink("School of younf mathematics", "Index", new { area = "Administrator", controller = "Home" }, new { @class = "navbar-brand" })
                </b>

                <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Administrators", "Index", new { area = "Administrator", controller = "Home" })</li>
                    <li>@Html.ActionLink("Teachers", "Index", new { area = "Administrator", controller = "Teacher" })</li>
                    <li>@Html.ActionLink("Pupils", "Index", new { area = "Administrator", controller = "Pupil" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Other</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Requisitions", "Index", "Requisition")</li>
                            <li>@Html.ActionLink("Roles", "Index", "User")</li>
                            <li>@Html.ActionLink("Classrooms", "Index", "User")</li>
                            <li>@Html.ActionLink("Comments", "Index", "User")</li>
                            <li>@Html.ActionLink("User", "Index", "User")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-right navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
                        <ul class="dropdown-menu" style="padding: 12px;">
                            <li>
                                <form class="form-inline">
                                    <button type="submit" class="btn btn-default pull-right"><i class="glyphicon glyphicon-search"></i></button><input type="text" class="form-control pull-left" placeholder="Search">
                                </form>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> <i class="glyphicon glyphicon-chevron-down"></i></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("LogOff", "LogOff", new {area = "Administrator", controller = "Home"})</li>
                            <li>@Html.ActionLink("Settings", "Settings", new { area = "Administrator", controller = "Home" })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Site", "Index", new { area = "", controller = "Home" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav><!-- /.navbar -->
    <!-- Begin Body -->
    <div class="container">
        <div class="no-gutter row">
            <!-- left side column -->
            <div class="col-md-2 left-menu">
                <div class="panel panel-default" id="sidebar">
                    <div class="panel-heading" style="background-color: #888; color: #fff;">Construction menu</div>

                    @RenderSection("LeftMenu", required: false)
                    <!--/panel body-->
                </div><!--/panel-->
            </div><!--/end left column-->
            <!-- right content column-->
            <div class="col-md-7 main-content" id="content">
                <div class="panel">
                    <div class="panel-heading" style="background-color: #111; color: #ffffff;">@ViewBag.Title</div>
                    <div class="panel-body">
                        <img id="loading" src="~/images/ajax-loader.gif" style="display: none;"/>
                        @RenderSection("Body", required: false)

                    </div><!--/panel-body-->
</div><!--/panel-->
<!--/end right column-->
</div>
</div>
</div>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-right">
                <h5>Вad ©Company 2017</h5>
            </div>
        </div>
    </div>
</footer>

<!-- script references -->
@Scripts.Render("~/adminjs")
@RenderSection("scripts", required: false)
</body>
</html>