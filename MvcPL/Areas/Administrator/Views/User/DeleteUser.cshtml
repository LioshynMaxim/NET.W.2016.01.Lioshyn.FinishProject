@model MvcPL.Areas.Administrator.Models.FullUserModel
@section Header{
    @{ViewBag.Title = "Delete user";}
}
@section LeftMenu{
    <div class="panel-body">
        <ul class="nav nav-stacked">
            <li>@Html.ActionLink("Create New user", "CreateUser", new { area = "Administrator", controller = "User" })</li>
        </ul>
    </div>
}
@section Body{
    <h2>DeleteUser</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal"></dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                @Html.HiddenFor(model => model.User.Id)

                @{
                    if(Model != null) { Html.RenderPartial("_User", Model.User);}
                }

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
}